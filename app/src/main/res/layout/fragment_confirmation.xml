<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/sky_B24"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">

            <LinearLayout
                android:layout_weight="4"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/confirmationcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/confirmationitem_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/confirmationitem_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/white"
                    android:textSize="9dp"

                    />
                <TextView
                    android:id="@+id/confirmationitem_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/white"
                    android:textSize="9dp"

                    />
            </LinearLayout>

            <Button
                android:id="@+id/confirmationitem_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="UbicaciÃ³n"
                android:backgroundTint="@color/orange_YR68"
                android:textColor="@color/white"
                android:textSize="12dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>